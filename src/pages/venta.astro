    <script>
      import { gsap } from "gsap";
      import { ScrollTrigger } from "gsap/ScrollTrigger";

      gsap.registerPlugin(ScrollTrigger);

      // Enhanced animations for each section
      document.querySelectorAll(".animate-section").forEach((section, index) => {
        const tl = gsap.timeline({
          scrollTrigger: {
            trigger: section,
            start: "top 80%",
            end: "bottom 20%",
            toggleActions: "play none none reverse",
            markers: false,
          },
        });

        // Main section fade in with slide up
        tl.fromTo(
          section,
          {
            opacity: 0,
            y: 60,
            scale: 0.98
          },
          {
            opacity: 1,
            y: 0,
            scale: 1,
            duration: 1,
            ease: "power3.out"
          }
        );

        // Animate text from left with stagger
        const textLeftElements = section.querySelectorAll(".animate-text-left");
        if (textLeftElements.length > 0) {
          tl.fromTo(
            textLeftElements,
            {
              x: -80,
              opacity: 0,
              rotationY: -15
            },
            {
              x: 0,
              opacity: 1,
              rotationY: 0,
              duration: 0.8,
              stagger: 0.12,
              ease: "power2.out"
            },
            "-=0.6"
          );
        }

        // Animate text from right with stagger
        const textRightElements = section.querySelectorAll(".animate-text-right");
        if (textRightElements.length > 0) {
          tl.fromTo(
            textRightElements,
            {
              x: 80,
              opacity: 0,
              rotationY: 15
            },
            {
              x: 0,
              opacity: 1,
              rotationY: 0,
              duration: 0.8,
              stagger: 0.12,
              ease: "power2.out"
            },
            "-=0.7"
          );
        }

        // Animate images with zoom and rotate effect
        const imageElements = section.querySelectorAll(".animate-image");
        if (imageElements.length > 0) {
          tl.fromTo(
            imageElements,
            {
              scale: 0.7,
              opacity: 0,
              rotation: -5,
              transformOrigin: "center center"
            },
            {
              scale: 1,
              opacity: 1,
              rotation: 0,
              duration: 1,
              ease: "back.out(1.4)"
            },
            "-=0.6"
          );
          
          // Add subtle hover effect to images
          imageElements.forEach(img => {
            img.addEventListener('mouseenter', () => {
              gsap.to(img, {
                scale: 1.05,
                duration: 0.3,
                ease: "power2.out"
              });
            });
            
            img.addEventListener('mouseleave', () => {
              gsap.to(img, {
                scale: 1,
                duration: 0.3,
                ease: "power2.out"
              });
            });
          });
        }
      });

      // Special animation for the financial analysis section
      const financialSection = document.querySelector('#analisis-financiero');
      if (financialSection) {
        gsap.fromTo(
          financialSection,
          {
            opacity: 0,
            y: 100
          },
          {
            opacity: 1,
            y: 0,
            duration: 1.2,
            ease: "power3.out",
            scrollTrigger: {
              trigger: financialSection,
              start: "top 85%",
              toggleActions: "play none none reverse"
            }
          }
        );
      }

      // Animate buttons and tabs with hover effects
      document.querySelectorAll('.scenario-tab').forEach(tab => {
        tab.addEventListener('mouseenter', () => {
          if (!tab.classList.contains('active')) {
            gsap.to(tab, {
              scale: 1.05,
              duration: 0.2,
              ease: "power2.out"
            });
          }
        });
        
        tab.addEventListener('mouseleave', () => {
          if (!tab.classList.contains('active')) {
            gsap.to(tab, {
              scale: 1,
              duration: 0.2,
              ease: "power2.out"
            });
          }
        });
      });
    </script>
