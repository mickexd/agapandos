    <script>
      import { gsap } from "gsap";
      import { ScrollTrigger } from "gsap/ScrollTrigger";

      gsap.registerPlugin(ScrollTrigger);

      document.querySelectorAll(".animate-section").forEach((section) => {
        const tl = gsap.timeline({
          scrollTrigger: {
            trigger: section,
            start: "top 85%",
            toggleActions: "play none none reverse",
          },
        });

        tl.set(section, { opacity: 0, y: 50 })
          .to(section, { opacity: 1, y: 0, duration: 0.8, ease: "power2.out" })
          .fromTo(
            section.querySelectorAll(".animate-text-left"),
            { x: -50, opacity: 0 },
            { x: 0, opacity: 1, duration: 0.6, stagger: 0.1 },
            "-=0.4"
          )
          .fromTo(
            section.querySelectorAll(".animate-text-right"),
            { x: 50, opacity: 0 },
            { x: 0, opacity: 1, duration: 0.6, stagger: 0.1 },
            "-=0.4"
          )
          .fromTo(
            section.querySelectorAll(".animate-image"),
            { scale: 0.8, opacity: 0 },
            { scale: 1, opacity: 1, duration: 0.6, ease: "back.out(1.7)" },
            "-=0.4"
          );
      });
