<section class="relative w-full min-h-screen md:px-8 pb-8 pt-8 bg-[#6c6464]">
  <div class="flex flex-col items-center w-full max-w-none pt-8">
    <h1
      id="map-title"
      class="text-4xl md:text-6xl text-white italianno-regular text-center mb-8"
      style="clip-path: inset(0 0 100% 0);"
    >
      Ubicaci√≥n
    </h1>
    <div class="w-full max-w-4xl mx-auto shadow-2xl">
      <div
        id="map-container"
        class="relative overflow-hidden rounded-lg shadow-lg"
        style="clip-path: inset(0 0 100% 0);"
      >
        <iframe
          src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d890.1098454917574!2d-103.68472706246057!3d19.94488548455756!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x8425850732d27ae7%3A0x5735774d6ce51ad1!2sLOS%20AGAPANDOS%20TAPALPA!5e0!3m2!1ses-419!2smx!4v1758959525004!5m2!1ses-419!2smx"
          width="100%"
          height="400"
          style="border:0;"
          allowfullscreen=""
          loading="lazy"
          referrerpolicy="no-referrer-when-downgrade"
          class="w-full h-96 md:h-[500px]"></iframe>
      </div>
    </div>
  </div>
</section>

<script>
  import { gsap } from "gsap";
  import { ScrollTrigger } from "gsap/ScrollTrigger";

  gsap.registerPlugin(ScrollTrigger);

  // Animate map section on scroll with curtain effect
  ScrollTrigger.create({
    trigger: "#map-title",
    start: "top 80%",
    onEnter: () => {
      gsap.to("#map-title", {
        clipPath: "inset(0 0 0 0)",
        duration: 1,
        ease: "power3.out",
      });
      gsap.to("#map-container", {
        clipPath: "inset(0 0 0 0)",
        duration: 1.2,
        ease: "power3.out",
        delay: 0.3,
      });
    },
    once: true,
  });
</script>
