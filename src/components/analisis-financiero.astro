<script>
  import { gsap } from "gsap";

  document.addEventListener("DOMContentLoaded", () => {
    const tabs = document.querySelectorAll(".scenario-tab");
    const scenarios = document.querySelectorAll(".scenario-data");
    let isAnimating = false;

    // Animate the initial scenario on page load
    const initialScenario = document.querySelector(".scenario-data.active");
    if (initialScenario) {
      gsap.fromTo(
        initialScenario,
        {
          opacity: 0,
          y: 20,
        },
        {
          opacity: 1,
          y: 0,
          duration: 0.8,
          ease: "power2.out",
          delay: 0.3,
        }
      );
    }

    tabs.forEach((tab) => {
      tab.addEventListener("click", () => {
        if (isAnimating) return; // Prevent clicks during animation

        const scenarioId = tab.getAttribute("data-scenario");
        const currentScenario = document.querySelector(".scenario-data.active");
        const targetScenario = document.querySelector(
          `.scenario-data[data-scenario="${scenarioId}"]`
        );

        // If clicking the same tab, do nothing
        if (currentScenario === targetScenario) return;

        isAnimating = true;

        // Animate out current scenario
        if (currentScenario) {
          gsap.to(currentScenario, {
            opacity: 0,
            y: -20,
            duration: 0.3,
            ease: "power2.in",
            onComplete: () => {
              currentScenario.classList.remove("active");

              // Update tabs
              tabs.forEach((t) => t.classList.remove("active"));
              tab.classList.add("active");

              // Animate in new scenario
              if (targetScenario) {
                targetScenario.classList.add("active");
                gsap.fromTo(
                  targetScenario,
                  {
                    opacity: 0,
                    y: 30,
                    scale: 0.95,
                  },
                  {
                    opacity: 1,
                    y: 0,
                    scale: 1,
                    duration: 0.5,
                    ease: "power2.out",
                    onComplete: () => {
                      isAnimating = false;
                    },
                  }
                );
              } else {
                isAnimating = false;
              }
            },
          });
        } else {
          // First time loading
          tabs.forEach((t) => t.classList.remove("active"));
          tab.classList.add("active");

          if (targetScenario) {
            targetScenario.classList.add("active");
            gsap.fromTo(
              targetScenario,
              {
                opacity: 0,
                y: 30,
              },
              {
                opacity: 1,
                y: 0,
                duration: 0.5,
                ease: "power2.out",
                onComplete: () => {
                  isAnimating = false;
                },
              }
            );
          } else {
            isAnimating = false;
          }
        }
      });
    });
  });
</script>
