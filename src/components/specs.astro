  #chicas-specs {
    opacity: 0;
  }
</style>

<script>
  import { gsap } from "gsap";
  import { ScrollTrigger } from "gsap/ScrollTrigger";

  gsap.registerPlugin(ScrollTrigger);

  let showingChicasSpecs = false;

  // Scroll animations
  gsap.from("h2", {
    scrollTrigger: {
      trigger: "h2",
      start: "top 80%",
      toggleActions: "play none none reverse",
    },
    opacity: 0,
    y: 50,
    duration: 1,
    ease: "power2.out",
  });

  gsap.from("#specs-toggle-button", {
    scrollTrigger: {
      trigger: "#specs-toggle-button",
      start: "top 80%",
      toggleActions: "play none none reverse",
    },
    opacity: 0,
    y: 30,
    duration: 0.8,
    ease: "power2.out",
    delay: 0.1,
  });

  gsap.from("#grandes-specs p", {
    scrollTrigger: {
      trigger: "#grandes-specs",
      start: "top 80%",
      toggleActions: "play none none reverse",
    },
    opacity: 0,
    y: 30,
    duration: 0.8,
    ease: "power2.out",
    delay: 0.2,
  });

  gsap.from("#grandes-specs .grid > div", {
    scrollTrigger: {
      trigger: "#grandes-specs .grid",
      start: "top 80%",
      toggleActions: "play none none reverse",
    },
    opacity: 0,
    y: 30,
    duration: 0.6,
    ease: "power2.out",
    stagger: 0.1,
    delay: 0.4,
  });

  function toggleSpecs() {
    const grandesSpecs = document.getElementById("grandes-specs");
    const chicasSpecs = document.getElementById("chicas-specs");
    const toggleButton = document.getElementById("specs-toggle-button");

    const tl = gsap.timeline();

    if (showingChicasSpecs) {
      // Switch to grandes: fade out chicas, fade in grandes
      tl.to(chicasSpecs, {
        opacity: 0,
        y: -50,
        duration: 0.5,
        ease: "power2.out",
      })
        .set(chicasSpecs, { display: "none" })
        .set(grandesSpecs, { display: "block", opacity: 0, y: 50 })
        .to(grandesSpecs, {
          opacity: 1,
          y: 0,
          duration: 0.5,
          ease: "power2.out",
        });
      if (toggleButton) toggleButton.textContent = "Ver cabañas chicas";
      showingChicasSpecs = false;
    } else {
      // Switch to chicas: fade out grandes, fade in chicas
      tl.to(grandesSpecs, {
        opacity: 0,
        y: -50,
        duration: 0.5,
        ease: "power2.out",
      })
        .set(grandesSpecs, { display: "none" })
        .set(chicasSpecs, { display: "block", opacity: 0, y: 50 })
        .to(chicasSpecs, {
          opacity: 1,
          y: 0,
          duration: 0.5,
          ease: "power2.out",
        });
      if (toggleButton) toggleButton.textContent = "Ver cabañas grandes";
      showingChicasSpecs = true;
    }
  }

  // Make function globally available
  window.toggleSpecs = toggleSpecs;
</script>
