---
// Import GSAP for scroll animations

import AnimatedButton from "../animated-button/animated-button.jsx";
---

<section
  id="reservaciones"
  class="w-full py-8 sm:py-12 lg:py-16 flex flex-col bg-[#6c6464] min-h-screen"
>
  <h2
    class="text-white text-2xl sm:text-3xl md:text-4xl lg:text-5xl xl:text-6xl font-bold text-center mb-6 sm:mb-8 lg:mb-12 italianno-regular text-shadow-md px-4 reveal-title"
  >
    Reservaciones
  </h2>

  <div class="container mx-auto px-4 sm:px-6 lg:px-8 flex-1 flex items-center">
    <div
      class="w-full max-w-6xl mx-auto bg-white/10 backdrop-blur-sm rounded-xl sm:rounded-2xl shadow-xl p-4 sm:p-6 md:p-8 lg:p-12 reveal-content"
    >
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-6 sm:gap-8 lg:gap-12">
        <!-- Address Section -->
        <div
          class="space-y-4 sm:space-y-6 text-center lg:text-left reveal-left"
        >
          <h3
            class="text-xl sm:text-2xl lg:text-3xl font-bold text-white italianno-regular"
          >
            Dirección
          </h3>
          <div class="space-y-3 sm:space-y-4">
            <p
              class="text-white text-sm sm:text-base lg:text-lg xl:text-xl font-poppins leading-relaxed"
            >
              Carretera Guadalajara – Tapalpa Km 22
            </p>
            <p
              class="text-white text-sm sm:text-base lg:text-lg xl:text-xl font-poppins leading-relaxed"
            >
              Fraccionamiento Pinares Tapalpa
            </p>
            <p
              class="text-white text-sm sm:text-base lg:text-lg xl:text-xl font-poppins leading-relaxed"
            >
              Tapalpa, Jalisco, México
            </p>
          </div>
        </div>

        <!-- Contact Section -->
        <div
          class="space-y-4 sm:space-y-6 text-center lg:text-left reveal-right"
        >
          <h3
            class="text-xl sm:text-2xl lg:text-3xl font-bold text-white italianno-regular"
          >
            Contacto
          </h3>
          <div class="space-y-4 sm:space-y-6">
            <div
              class="flex items-center space-x-3 sm:space-x-4 justify-center lg:justify-start"
            >
              <svg
                class="w-5 h-5 sm:w-6 sm:h-6 text-white flex-shrink-0"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
                xmlns="http://www.w3.org/2000/svg"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"
                ></path>
              </svg>
              <a
                href="tel:+523318485469"
                class="text-white text-sm sm:text-base lg:text-lg xl:text-xl font-poppins hover:text-gray-200 transition-colors"
              >
                +52 33 1848 5469
              </a>
            </div>

            <div
              class="flex items-start space-x-3 sm:space-x-4 justify-center lg:justify-start"
            >
              <svg
                class="w-5 h-5 sm:w-6 sm:h-6 text-white mt-1 flex-shrink-0"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
                xmlns="http://www.w3.org/2000/svg"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
                ></path>
              </svg>
              <div class="flex flex-col space-y-2 sm:space-y-3">
                <a
                  href="mailto:reservaciones@losagapandostapalpa.com"
                  class="text-white text-sm sm:text-base lg:text-lg xl:text-xl font-poppins hover:text-gray-200 transition-colors break-all"
                >
                  reservaciones@losagapandostapalpa.com
                </a>
                <a
                  href="mailto:losagapandostapalpa@gmail.com"
                  class="text-white text-sm sm:text-base lg:text-lg xl:text-xl font-poppins hover:text-gray-200 transition-colors break-all"
                >
                  losagapandostapalpa@gmail.com
                </a>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Call to Action -->
      <div class="mt-8 sm:mt-10 lg:mt-12 xl:mt-16 text-center reveal-cta">
        <p
          class="text-white text-base sm:text-lg lg:text-xl xl:text-2xl mb-4 sm:mb-6 font-poppins px-2"
        >
          ¿Listo para tu escape perfecto?
        </p>
        <div class="flex justify-center">
          <AnimatedButton
            label="Reservar"
            route="/reservar"
            animateOnScroll={false}
          />
        </div>
      </div>
    </div>
  </div>
</section>

<script>
  import gsap from "gsap";
  import { ScrollTrigger } from "gsap/ScrollTrigger";
  document.addEventListener("DOMContentLoaded", () => {
    gsap.registerPlugin(ScrollTrigger);

    // Animate title
    gsap.fromTo(
      ".reveal-title",
      {
        opacity: 0,
        y: 50,
        scale: 0.9,
      },
      {
        opacity: 1,
        y: 0,
        scale: 1,
        duration: 1,
        ease: "power3.out",
        scrollTrigger: {
          trigger: ".reveal-title",
          start: "top 85%",
          toggleActions: "play none none none",
        },
      }
    );

    // Animate content container
    gsap.fromTo(
      ".reveal-content",
      {
        opacity: 0,
        y: 80,
        scale: 0.95,
      },
      {
        opacity: 1,
        y: 0,
        scale: 1,
        duration: 1.2,
        delay: 0.2,
        ease: "power3.out",
        scrollTrigger: {
          trigger: ".reveal-content",
          start: "top 85%",
          toggleActions: "play none none none",
        },
      }
    );

    // Animate left section
    gsap.fromTo(
      ".reveal-left",
      {
        opacity: 0,
        x: -50,
      },
      {
        opacity: 1,
        x: 0,
        duration: 1,
        delay: 0.4,
        ease: "power3.out",
        scrollTrigger: {
          trigger: ".reveal-left",
          start: "top 85%",
          toggleActions: "play none none none",
        },
      }
    );

    // Animate right section
    gsap.fromTo(
      ".reveal-right",
      {
        opacity: 0,
        x: 50,
      },
      {
        opacity: 1,
        x: 0,
        duration: 1,
        delay: 0.6,
        ease: "power3.out",
        scrollTrigger: {
          trigger: ".reveal-right",
          start: "top 85%",
          toggleActions: "play none none none",
        },
      }
    );

    // Animate CTA section
    gsap.fromTo(
      ".reveal-cta",
      {
        opacity: 0,
        y: 30,
        scale: 0.9,
      },
      {
        opacity: 1,
        y: 0,
        scale: 1,
        duration: 1,
        delay: 0,
        ease: "power3.out",
        scrollTrigger: {
          trigger: ".reveal-cta",
          start: "top 90%",
          toggleActions: "play none none none",
        },
      }
    );
  });
</script>
